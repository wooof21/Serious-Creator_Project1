<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.chihuoshijian.view.PinnedHeaderListView 
    android:id="@+id/dish_order_pinned_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ></com.chihuoshijian.view.PinnedHeaderListView>
    


<LinearLayout 
    android:id="@+id/dish_order_middle_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="#40000000"
    android:layout_alignParentBottom="true"
    >
    <ImageView 
        android:id="@+id/dish_order_main_slide_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:src="@drawable/dish_order_left_menu"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        />
    <LinearLayout 
        android:id="@+id/dish_order_shopping_cart_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:weightSum="3"
        android:background="@drawable/corners_bg_lred_sr"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dish_order_shopping_cart"
            android:layout_gravity="center"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="чбошод"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#ffffff"
            />
        <TextView 
            android:id="@+id/dish_order_shopping_cart_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(0)"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#ffffff"
            
            />
    </LinearLayout>
    
</LinearLayout>



</RelativeLayout>
